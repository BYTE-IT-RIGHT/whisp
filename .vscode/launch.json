    "version": "0.2.0",
    "configurations": [
        // FOSS Public - default for contributors (public key in repo, works out of the box)
        {
            "name": "whisp (fosspublic)",
            "request": "launch",
            "type": "dart",
            "args": [
                "--flavor",
                "fosspublic",
                "--dart-define=APP_FLAVOR=foss"
            ]
        },
        {
            "name": "whisp (fosspublic) - release",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release",
            "args": [
                "--flavor",
                "fosspublic",
                "--dart-define=APP_FLAVOR=foss"
            ]
        },
        // FOSS Official - requires private foss-key.properties (for maintainer)
        {
            "name": "whisp (foss)",
            "request": "launch",
            "type": "dart",
            "args": [
                "--flavor",
                "foss",
                "--dart-define=APP_FLAVOR=foss"
            ]
        },
        {
            "name": "whisp (foss) - release",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release",
            "args": [
                "--flavor",
                "foss",
                "--dart-define=APP_FLAVOR=foss"
            ]
        },
        // Google Play - requires private release-key.properties (for maintainer)
        {
            "name": "whisp (googleplay)",
            "request": "launch",
            "type": "dart",
            "args": [
                "--flavor",
                "googleplay",
                "--dart-define=APP_FLAVOR=googleplay"
            ]
        },
        {
            "name": "whisp (googleplay) - release",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release",
            "args": [
                "--flavor",
                "googleplay",
                "--dart-define=APP_FLAVOR=googleplay"
            ]
        }
    ]
}