    "version": "0.2.0",
    "configurations": [
        // Google Play flavor (default for development)
        {
            "name": "whisp (googleplay)",
            "request": "launch",
            "type": "dart",
            "args": [
                "--flavor",
                "googleplay",
                "--dart-define=APP_FLAVOR=googleplay"
            ]
        },
        {
            "name": "whisp (googleplay) - profile",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile",
            "args": [
                "--flavor",
                "googleplay",
                "--dart-define=APP_FLAVOR=googleplay"
            ]
        },
        {
            "name": "whisp (googleplay) - release",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release",
            "args": [
                "--flavor",
                "googleplay",
                "--dart-define=APP_FLAVOR=googleplay"
            ]
        },
        // FOSS flavor (for open source builds)
        {
            "name": "whisp (foss)",
            "request": "launch",
            "type": "dart",
            "args": [
                "--flavor",
                "foss",
                "--dart-define=APP_FLAVOR=foss"
            ]
        },
        {
            "name": "whisp (foss) - profile",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile",
            "args": [
                "--flavor",
                "foss",
                "--dart-define=APP_FLAVOR=foss"
            ]
        },
        {
            "name": "whisp (foss) - release",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release",
            "args": [
                "--flavor",
                "foss",
                "--dart-define=APP_FLAVOR=foss"
            ]
        }
    ]
}